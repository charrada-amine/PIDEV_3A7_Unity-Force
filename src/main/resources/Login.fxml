<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.LoginController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Colonne gauche avec fond bleu -->
    <left>
        <VBox alignment="CENTER" prefWidth="250.0" style="-fx-background-color: #007BFF;">
            <Label text="Gestion Utilisateurs" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 50.0;">

            <!-- Titre -->
            <HBox alignment="CENTER">
                <Label text="Connexion" style="-fx-font-size: 30.0; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Champs de saisie -->
            <VBox alignment="CENTER" spacing="15.0">
                <TextField fx:id="emailField" promptText="Email" prefWidth="270.0" maxWidth="270.0" prefHeight="40.0" style="-fx-font-size: 18.0;" />

                <!-- Champ du mot de passe avec bouton afficher/masquer -->
                <HBox alignment="CENTER" spacing="10.0">
                    <StackPane>
                        <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="300.0" prefHeight="40.0" style="-fx-font-size: 16.0;" />
                        <TextField fx:id="visiblePasswordField" promptText="Mot de passe" prefWidth="300.0" prefHeight="40.0" style="-fx-font-size: 16.0;" visible="false" managed="false" />
                    </StackPane>
                    <ToggleButton fx:id="togglePasswordButton" style="-fx-background-color: transparent; -fx-border-width: 0;">
                        <graphic>
                            <FontIcon iconLiteral="fas-eye-slash" iconSize="18" />
                        </graphic>
                    </ToggleButton>
                </HBox>

                <Hyperlink fx:id="forgotPasswordLink" text="Mot de passe oubliÃ© ?" onAction="#handleForgotPassword"
                           style="-fx-font-size: 14.0; -fx-text-fill: #007BFF;" />

                <!-- Bouton de connexion -->
                <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" prefWidth="320.0" prefHeight="45.0"
                        style="-fx-font-size: 18.0; -fx-background-color: #007BFF; -fx-text-fill: white;" />

                <!-- Bouton d'inscription -->
                <Button fx:id="signUpButton" text="Vous n'avez pas de compte ? Inscrivez-vous" onAction="#handleSignUp"
                        prefWidth="350.0" prefHeight="45.0"
                        style="-fx-font-size: 16.0; -fx-background-color: transparent; -fx-text-fill: #007BFF; -fx-border-color: #007BFF;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
