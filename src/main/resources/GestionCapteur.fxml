<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionCapteurController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Titre -->
    <Label text="Gestion des Capteurs">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <!-- Formulaire pour ajouter/modifier un capteur -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ID:"/>
        <TextField fx:id="idField" promptText="ID" disable="true"/>

        <Label text="Type:"/>
        <ComboBox fx:id="typeComboBox" promptText="Sélectionnez un type"/>

        <Label text="État:"/>
        <ComboBox fx:id="etatComboBox" promptText="Sélectionnez un état"/>

        <Label text="Date d'installation:"/>
        <DatePicker fx:id="datePicker"/>

        <Label text="Lampadaire ID:"/>
        <TextField fx:id="lampadaireIdField" promptText="Lampadaire ID"/>
    </HBox>

    <!-- Boutons pour les opérations CRUD -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAddCapteur"/>
        <Button text="Modifier" onAction="#handleUpdateCapteur"/>
        <Button text="Supprimer" onAction="#handleDeleteCapteur"/>
        <Button text="Rafraîchir" onAction="#handleRefresh"/>
    </HBox>

    <!-- Tableau pour afficher les capteurs -->
    <TableView fx:id="capteurTable" onMouseClicked="#handleTableClick">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="État" fx:id="etatColumn"/>
            <TableColumn text="Date d'installation" fx:id="dateColumn"/>
            <TableColumn text="Lampadaire ID" fx:id="lampadaireIdColumn"/>
        </columns>
    </TableView>
</VBox>
