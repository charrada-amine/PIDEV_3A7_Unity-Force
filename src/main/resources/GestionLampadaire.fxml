<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionLampadaireController"
            stylesheets="@styles/style.css">

    <!-- Barre de navigation latérale -->
    <left>
        <VBox prefWidth="240" styleClass="nav-bar">
            <Label text="Gestion Urbaine" styleClass="nav-title"/>
            <Button text="Lampadaires" styleClass="nav-button" onAction="#handleShowLampadaires">
                <graphic>
                    <FontIcon iconLiteral="fas-lightbulb" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Zones" styleClass="nav-button" onAction="#handleNavigateToZones">
                <graphic>
                    <FontIcon iconLiteral="fas-map-marker" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Retour" styleClass="nav-button" onAction="#handleBack">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-border-width: 0;">
            <content>
                <VBox spacing="30" style="-fx-padding: 25;">
                    <!-- Formulaire et Carte côte à côte -->
                    <HBox spacing="30" alignment="TOP_LEFT">
                        <!-- Formulaire -->
                        <VBox spacing="20" styleClass="card" prefWidth="380">
                            <Label text="Gestion des Lampadaires" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #202124;"/>

                            <VBox spacing="10">
                                <TextField fx:id="tfType" promptText="Type" styleClass="modern-input"/>
                                <Label fx:id="lblTypeError" styleClass="error-message" visible="false"/>

                                <TextField fx:id="tfPuissance" promptText="Puissance (W)" styleClass="modern-input"/>
                                <Label fx:id="lblPuissanceError" styleClass="error-message" visible="false"/>

                                <ComboBox fx:id="cbEtat" promptText="État" styleClass="modern-input"/>
                                <Label fx:id="lblEtatError" styleClass="error-message" visible="false"/>

                                <DatePicker fx:id="dpDateInstallation" promptText="Date Installation" styleClass="modern-input"/>
                                <Label fx:id="lblDateError" styleClass="error-message" visible="false"/>

                                <ComboBox fx:id="cbZone" promptText="Nom de la Zone" styleClass="modern-input"/>
                                <Label fx:id="lblZoneError" styleClass="error-message" visible="false"/>
                            </VBox>
                            <ComboBox fx:id="cbCamera" promptText="Caméra" styleClass="modern-input"/>
                            <Label fx:id="lblCameraError" styleClass="error-message" visible="false"/>
                            <VBox fx:id="mapContainer" prefHeight="200" prefWidth="360" visible="false" managed="false"/>

                            <HBox spacing="15" styleClass="button-container">
                                <Button text="Ajouter" onAction="#handleAdd" styleClass="action-button,add">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-plus-circle" iconSize="16" iconColor="white"/>
                                    </graphic>
                                </Button>
                                <Button text="Modifier" onAction="#handleUpdate" styleClass="action-button,edit">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-edit" iconSize="16" iconColor="white"/>
                                    </graphic>
                                </Button>
                                <Button text="Réinitialiser" onAction="#handleClear" styleClass="action-button,reset">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-undo" iconSize="16" iconColor="#2d3436"/>
                                    </graphic>
                                </Button>
                            </HBox>
                        </VBox>

                        <!-- Carte globale -->
                        <VBox styleClass="card" spacing="15" HBox.hgrow="ALWAYS">
                            <Label text="Carte des lampadaires" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #202124;"/>
                            <VBox fx:id="globalMapContainer" prefHeight="600" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dadce0; -fx-border-width: 1px;" HBox.hgrow="ALWAYS">
                                <children>
                                    <WebView fx:id="globalMapView" prefHeight="600" minWidth="0" HBox.hgrow="ALWAYS"/>
                                </children>
                            </VBox>
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 0 15 0 0;">
                                    <Label style="-fx-background-color: #34a853; -fx-min-width: 16; -fx-min-height: 16; -fx-background-radius: 8;"/>
                                    <Label text="Actif" style="-fx-text-fill: #5f6368;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 0 15 0 0;">
                                    <Label style="-fx-background-color: #fbbc04; -fx-min-width: 16; -fx-min-height: 16; -fx-background-radius: 8;"/>
                                    <Label text="En maintenance" style="-fx-text-fill: #5f6368;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 0 15 0 0;">
                                    <Label style="-fx-background-color: #ea4335; -fx-min-width: 16; -fx-min-height: 16; -fx-background-radius: 8;"/>
                                    <Label text="En panne" style="-fx-text-fill: #5f6368;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="5">
                                    <Label style="-fx-background-color: #1a73e8; -fx-min-width: 16; -fx-min-height: 16; -fx-background-radius: 8;"/>
                                    <Label text="Autres états" style="-fx-text-fill: #5f6368;"/>
                                </HBox>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>