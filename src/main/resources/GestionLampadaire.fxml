<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionLampadaireController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <GridPane vgap="10" hgap="10">
            <padding><Insets bottom="10"/></padding>

            <Label text="Gestion des Lampadaires" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3">
                <font>
                    <Font size="18"/>
                </font>
            </Label>


            <!-- Input Fields -->
            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="tfType" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Puissance:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="tfPuissance" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="État:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="cbEtat" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Date Installation:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <DatePicker fx:id="dpDateInstallation" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="ID Zone:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="tfIdZone" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <!-- Buttons -->
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <Button text="Ajouter" onAction="#handleAdd" style="-fx-base: #4CAF50;"/>
                <Button text="Modifier" onAction="#handleUpdate" style="-fx-base: #2196F3;"/>
                <Button text="Supprimer" onAction="#handleDelete" style="-fx-base: #f44336;"/>
                <Button text="Vider" onAction="#handleClear"/>
            </HBox>
        </GridPane>
    </top>

    <center>
        <TableView fx:id="tableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                <TableColumn text="Type" prefWidth="150" fx:id="colType"/>
                <TableColumn text="Puissance" prefWidth="100" fx:id="colPuissance"/>
                <TableColumn text="État" prefWidth="100" fx:id="colEtat"/>
                <TableColumn text="Date Installation" prefWidth="150" fx:id="colDate"/>
                <TableColumn text="ID Zone" prefWidth="80" fx:id="colZone"/>
            </columns>
        </TableView>
    </center>
</BorderPane>