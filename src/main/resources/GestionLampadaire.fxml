<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionLampadaireController">

    <left>
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25;" prefWidth="350">
            <Label text="Formulaire Lampadaire" styleClass="form-title"/>

            <VBox spacing="15">
                <TextField fx:id="tfType" promptText="Type" styleClass="modern-input"/>
                <TextField fx:id="tfPuissance" promptText="Puissance (W)" styleClass="modern-input"/>
                <ComboBox fx:id="cbEtat" promptText="Ã‰tat" styleClass="modern-combo"/>
                <DatePicker fx:id="dpDateInstallation" promptText="Date Installation" styleClass="modern-datepicker"/>
                <TextField fx:id="tfIdZone" promptText="ID Zone" styleClass="modern-input"/>

                <HBox spacing="10" style="-fx-padding: 15 0 0 0;">
                    <Button text="Ajouter" onAction="#handleAdd" styleClass="success-button"/>
                    <Button text="Modifier" onAction="#handleUpdate" styleClass="primary-button"/>
                    <Button text="Supprimer" onAction="#handleDelete" styleClass="danger-button"/>
                    <Button text="Vider" onAction="#handleClear" styleClass="neutral-button"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background: transparent;">
            <FlowPane fx:id="cardContainer" hgap="20" vgap="20" style="-fx-padding: 20;"/>
        </ScrollPane>
    </center>
</BorderPane>