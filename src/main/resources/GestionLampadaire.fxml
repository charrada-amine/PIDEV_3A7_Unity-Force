<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx/fxml/1"
            fx:controller="tn.esprit.controllers.GestionLampadaireController"
            stylesheets="@styles/style.css">

    <!-- Barre de navigation latérale -->
    <left>
        <VBox prefWidth="240" styleClass="nav-bar">
            <Label text="Gestion Urbaine" styleClass="nav-title"/>
            <Button text="Lampadaires" styleClass="nav-button" onAction="#handleShowLampadaires">
                <graphic>
                    <FontIcon iconLiteral="fas-lightbulb" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Zones" styleClass="nav-button" onAction="#handleNavigateToZones">
                <graphic>
                    <FontIcon iconLiteral="fas-map-marker" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Retour" styleClass="nav-button" onAction="#handleBack">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <HBox spacing="30" style="-fx-padding: 25;">
            <!-- Formulaire modernisé -->
            <VBox spacing="20" styleClass="card" prefWidth="380">
                <Label text="Gestion des Lampadaires" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #202124;"/>

                <VBox spacing="10">
                    <TextField fx:id="tfType" promptText="Type" styleClass="modern-input"/>
                    <Label fx:id="lblTypeError" styleClass="error-message" visible="false"/>

                    <TextField fx:id="tfPuissance" promptText="Puissance (W)" styleClass="modern-input"/>
                    <Label fx:id="lblPuissanceError" styleClass="error-message" visible="false"/>

                    <ComboBox fx:id="cbEtat" promptText="État" styleClass="modern-input"/>
                    <Label fx:id="lblEtatError" styleClass="error-message" visible="false"/>

                    <DatePicker fx:id="dpDateInstallation" promptText="Date Installation" styleClass="modern-input"/>
                    <Label fx:id="lblDateError" styleClass="error-message" visible="false"/>

                    <TextField fx:id="tfIdZone" promptText="ID Zone" styleClass="modern-input"/>
                    <Label fx:id="lblZoneError" styleClass="error-message" visible="false"/>
                </VBox>

                <!-- Nouveaux boutons modernisés -->
                <HBox spacing="15" styleClass="button-container">
                    <Button text="Ajouter" onAction="#handleAdd" styleClass="action-button,add">
                        <graphic>
                            <FontIcon iconLiteral="fas-plus-circle" iconSize="16" iconColor="white"/>
                        </graphic>
                    </Button>
                    <Button text="Modifier" onAction="#handleUpdate" styleClass="action-button,edit">
                        <graphic>
                            <FontIcon iconLiteral="fas-edit" iconSize="16" iconColor="white"/>
                        </graphic>
                    </Button>
                    <Button text="Supprimer" onAction="#handleDelete" styleClass="action-button,delete">
                        <graphic>
                            <FontIcon iconLiteral="fas-trash-alt" iconSize="16" iconColor="white"/>
                        </graphic>
                    </Button>
                    <Button text="Réinitialiser" onAction="#handleClear" styleClass="action-button,reset">
                        <graphic>
                            <FontIcon iconLiteral="fas-undo" iconSize="16" iconColor="#2d3436"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Zone des cartes de lampadaires -->
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER"
                        style="-fx-background: transparent; -fx-border-width: 0;"
                        prefWidth="600">
                <FlowPane fx:id="cardContainer" hgap="25" vgap="25" style="-fx-padding: 20;"/>
            </ScrollPane>
        </HBox>
    </center>
</BorderPane>
