<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionLampadaireController"
            stylesheets="@styles/style.css">

    <!-- Barre de navigation latérale -->
    <left>
        <VBox prefWidth="240" styleClass="nav-bar" spacing="20" style="-fx-background-color: #2d3436; -fx-padding: 20;">
            <Label text="Gestion Urbaine" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center; -fx-background-color: #1a73e8; -fx-padding: 10; -fx-background-radius: 8;"/>
            <Button text="Voir Lampadaires" styleClass="nav-button" onAction="#handleShowLampadaires" prefWidth="200" style="-fx-font-size: 14px;">
                <graphic>
                    <FontIcon iconLiteral="fas-lightbulb" iconSize="18" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Gérer Zones" styleClass="nav-button" onAction="#handleNavigateToZones" prefWidth="200" style="-fx-font-size: 14px;">
                <graphic>
                    <FontIcon iconLiteral="fas-map-marker" iconSize="18" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Retour au Menu" styleClass="nav-button" onAction="#handleBack" prefWidth="200" style="-fx-font-size: 14px;">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="18" iconColor="#ffffff"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-border-width: 0;">
            <content>
                <VBox spacing="30" style="-fx-padding: 25; -fx-background-color: #f1f3f4;">
                    <!-- Formulaire et Carte côte à côte -->
                    <HBox spacing="30" alignment="TOP_LEFT">
                        <!-- Formulaire -->
                        <VBox spacing="20" styleClass="card" prefWidth="400" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dadce0; -fx-border-width: 1; -fx-padding: 20;">
                            <Label text="Gestion des Lampadaires" style="-fx-font-size: 26px; -fx-font-weight: 800; -fx-text-fill: #202124; -fx-alignment: center;"/>
                            <VBox spacing="12">
                                <TextField fx:id="tfType" promptText="Type de lampadaire" styleClass="modern-input"/>
                                <Label fx:id="lblTypeError" styleClass="error-message" visible="false"/>
                                <TextField fx:id="tfPuissance" promptText="Puissance (en Watts)" styleClass="modern-input"/>
                                <Label fx:id="lblPuissanceError" styleClass="error-message" visible="false"/>
                                <ComboBox fx:id="cbEtat" promptText="État du lampadaire" styleClass="modern-input"/>
                                <Label fx:id="lblEtatError" styleClass="error-message" visible="false"/>
                                <DatePicker fx:id="dpDateInstallation" promptText="Date d'installation" styleClass="modern-input"/>
                                <Label fx:id="lblDateError" styleClass="error-message" visible="false"/>
                                <ComboBox fx:id="cbZone" promptText="Zone associée" styleClass="modern-input"/>
                                <Label fx:id="lblZoneError" styleClass="error-message" visible="false"/>
                                <ComboBox fx:id="cbCamera" promptText="Caméra associée" styleClass="modern-input"/>
                                <Label fx:id="lblCameraError" styleClass="error-message" visible="false"/>
                            </VBox>
                            <VBox fx:id="mapContainer" prefHeight="220" prefWidth="360" visible="false" managed="false" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                            <HBox spacing="15" styleClass="button-container" alignment="CENTER">
                                <Button text="Ajouter" onAction="#handleAdd" styleClass="action-button,add" prefWidth="100">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-plus-circle" iconSize="16" iconColor="white"/>
                                    </graphic>
                                </Button>
                                <Button text="Modifier" onAction="#handleUpdate" styleClass="action-button,edit" prefWidth="100">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-edit" iconSize="16" iconColor="white"/>
                                    </graphic>
                                </Button>
                                <Button text="Réinitialiser" onAction="#handleClear" styleClass="action-button,reset" prefWidth="100">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-undo" iconSize="16" iconColor="#2d3436"/>
                                    </graphic>
                                </Button>
                            </HBox>
                        </VBox>

                        <!-- Carte globale et statut du trafic -->
                        <VBox styleClass="card" spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dadce0; -fx-border-width: 1; -fx-padding: 20;">
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <Label text="Carte des Lampadaires" style="-fx-font-size: 22px; -fx-font-weight: 700; -fx-text-fill: #202124;"/>
                                <Button text="Rafraîchir" onAction="#handleShowLampadaires" style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-font-weight: 700; -fx-background-radius: 8;">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-sync-alt" iconSize="16" iconColor="white"/>
                                    </graphic>
                                </Button>
                            </HBox>
                            <Label fx:id="trafficStatusLabel" text="Statut du trafic: En attente..."
                                   style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #202124; -fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dadce0; -fx-border-width: 1;"/>
                            <VBox fx:id="globalMapContainer" prefHeight="600" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dadce0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                                <children>
                                    <WebView fx:id="globalMapView" prefHeight="600" minWidth="0" HBox.hgrow="ALWAYS"/>
                                </children>
                            </VBox>
                            <HBox spacing="20" alignment="CENTER_LEFT">
                                <HBox alignment="CENTER" spacing="8">
                                    <Label style="-fx-background-color: #34a853; -fx-min-width: 18; -fx-min-height: 18; -fx-background-radius: 9;"/>
                                    <Label text="Actif" style="-fx-text-fill: #5f6368; -fx-font-size: 14px;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="8">
                                    <Label style="-fx-background-color: #fbbc04; -fx-min-width: 18; -fx-min-height: 18; -fx-background-radius: 9;"/>
                                    <Label text="En maintenance" style="-fx-text-fill: #5f6368; -fx-font-size: 14px;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="8">
                                    <Label style="-fx-background-color: #ea4335; -fx-min-width: 18; -fx-min-height: 18; -fx-background-radius: 9;"/>
                                    <Label text="En panne" style="-fx-text-fill: #5f6368; -fx-font-size: 14px;"/>
                                </HBox>
                                <HBox alignment="CENTER" spacing="8">
                                    <Label style="-fx-background-color: #1a73e8; -fx-min-width: 18; -fx-min-height: 18; -fx-background-radius: 9;"/>
                                    <Label text="Autres états" style="-fx-text-fill: #5f6368; -fx-font-size: 14px;"/>
                                </HBox>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>