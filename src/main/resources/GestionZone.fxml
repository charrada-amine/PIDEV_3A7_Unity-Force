<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.web.WebView?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx/fxml/1"
            fx:controller="tn.esprit.controllers.GestionZoneController"
            stylesheets="@styles/style.css">

    <!-- Barre de navigation latérale -->
    <left>
        <VBox prefWidth="240" styleClass="nav-bar">
            <Label text="Gestion Urbaine" styleClass="nav-title"/>
            <Button text="Zones" styleClass="nav-button" onAction="#handleNavigateToLampadaire">
                <graphic>
                    <FontIcon iconLiteral="fas-map-marker" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Lampadaires" styleClass="nav-button" onAction="#handleNavigateToLampadaires">
                <graphic>
                    <FontIcon iconLiteral="far-lightbulb" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
            <Button text="Retour" styleClass="nav-button" onAction="#handleBack">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="16" iconColor="#ffffff"/>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 25;">
            <!-- Première ligne : Formulaire + Carte -->
            <HBox spacing="30" VBox.vgrow="ALWAYS">
                <!-- Formulaire -->
                <VBox spacing="20" styleClass="card" prefWidth="380">
                    <Label text="Gestion des Zones" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #202124;"/>

                    <VBox spacing="20">
                        <TextField fx:id="tfNom" promptText="Nom" styleClass="modern-input"/>
                        <TextField fx:id="tfDescription" promptText="Description" styleClass="modern-input"/>
                        <TextField fx:id="tfSurface" promptText="Surface (m²)" styleClass="modern-input"/>
                        <TextField fx:id="tfNombreLampadaires" promptText="Nombre de Lampadaires" styleClass="modern-input"/>
                        <TextField fx:id="tfNombreCitoyens" promptText="Nombre de Citoyens" styleClass="modern-input"/>

                        <HBox spacing="15" styleClass="button-container">
                            <Button text="Ajouter" onAction="#handleAdd" styleClass="action-button,add">
                                <graphic>
                                    <FontIcon iconLiteral="fas-plus-circle" iconSize="16" iconColor="white"/>
                                </graphic>
                            </Button>
                            <Button text="Modifier" onAction="#handleUpdate" styleClass="action-button,edit">
                                <graphic>
                                    <FontIcon iconLiteral="fas-edit" iconSize="16" iconColor="white"/>
                                </graphic>
                            </Button>
                            <Button text="Supprimer" onAction="#handleDelete" styleClass="action-button,delete">
                                <graphic>
                                    <FontIcon iconLiteral="fas-trash-alt" iconSize="16" iconColor="white"/>
                                </graphic>
                            </Button>
                            <Button text="Réinitialiser" onAction="#handleClear" styleClass="action-button,reset">
                                <graphic>
                                    <FontIcon iconLiteral="fas-undo" iconSize="16" iconColor="#2d3436"/>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Carte en plein écran -->
                <StackPane styleClass="full-map-container" HBox.hgrow="ALWAYS">
                    <WebView fx:id="mapView" minWidth="600" minHeight="400"
                             StackPane.alignment="CENTER"/>
                </StackPane>
            </HBox>

            <!-- Deuxième ligne : Liste des zones -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <Label text="Zones Urbaines" styleClass="section-title"/>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                            styleClass="modern-scroll" VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="cardContainer" hgap="25" vgap="25"
                              style="-fx-padding: 15;"/>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>