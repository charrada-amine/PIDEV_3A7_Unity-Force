<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionDonneesController" fitToWidth="true">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Titre -->
            <Label text="Gestion des Données">
                <font>
                    <Font size="20"/>
                </font>
            </Label>

            <!-- Sélection du type de capteur -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Type de capteur:"/>
                <ComboBox fx:id="typeCapteurComboBox" promptText="Sélectionnez un type" onAction="#updateValeurIndication"/>
            </HBox>

            <!-- Formulaire pour ajouter/modifier des données -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Date de collecte:"/>
                <DatePicker fx:id="dateCollectePicker"/>

                <Label text="Heure de collecte:"/>
                <TextField fx:id="heureCollecteField" promptText="HH:MM:SS"/>

                <Label text="ID du capteur:"/>
                <TextField fx:id="capteurIdField" promptText="ID du capteur"/>
            </HBox>

            <!-- Valeur avec indication dynamique -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Valeur:"/>
                <TextField fx:id="valeurField" promptText="Valeur"/>
                <Label fx:id="valeurIndicationLabel" text="Sélectionnez un type de capteur" style="-fx-font-size: 12px; -fx-text-fill: grey;"/>
            </VBox>

            <!-- Boutons pour les opérations CRUD -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAddDonnee"/>
                <Button text="Modifier" onAction="#handleUpdateDonnee"/>
                <Button text="Supprimer" onAction="#handleDeleteDonnee"/>
                <Button text="Rafraîchir" onAction="#handleRefresh"/>
            </HBox>

            <!-- VBox pour afficher les données sous forme de cartes -->
            <VBox fx:id="donneeCardContainer" spacing="10" alignment="TOP_CENTER"/>
        </VBox>
    </content>
</ScrollPane>
