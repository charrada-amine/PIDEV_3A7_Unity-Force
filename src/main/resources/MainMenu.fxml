<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="CENTER" spacing="40" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.MainMenuController"
      style="-fx-background-color: #F8F9FA;">

    <padding>
        <Insets top="80" right="50" bottom="80" left="50"/>
    </padding>

    <Text text="Gestion Municipale"
          style="-fx-font-size: 32px; -fx-fill: #2B2D42; -fx-font-weight: 800;"/>

    <VBox alignment="CENTER" spacing="25">
        <!-- Intervention Management -->
        <Button text="Gestion des Interventions"
                onAction="#navigateToInterventions"
                style="-fx-background-color: #FF6B35;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-pref-width: 300px;
                       -fx-padding: 20;
                       -fx-background-radius: 8;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 2, 2);
                       -fx-cursor: hand;">
            <graphic>
                <FontIcon iconLiteral="fas-tools" iconSize="20" iconColor="white"/>
            </graphic>
        </Button>

        <!-- Reclamation Management -->
        <Button text="Gestion des RÃ©clamations"
                onAction="#navigateToReclamations"
                style="-fx-background-color: #EF476F;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-pref-width: 300px;
                       -fx-padding: 20;
                       -fx-background-radius: 8;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 2, 2);
                       -fx-cursor: hand;">
            <graphic>
                <FontIcon iconLiteral="fas-exclamation-circle" iconSize="20" iconColor="white"/>
            </graphic>
        </Button>
    </VBox>


</VBox>