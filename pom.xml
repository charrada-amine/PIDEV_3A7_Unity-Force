            <version>21.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-web</artifactId> <!-- Added from second POM -->
            <version>21.0.2</version>
        </dependency>

        <!-- MySQL Connector -->
        <dependency>
            <groupId>com.mysql</groupId> <!-- Updated groupId to com.mysql -->
            <artifactId>mysql-connector-j</artifactId> <!-- Updated artifactId -->
            <version>8.0.33</version>
